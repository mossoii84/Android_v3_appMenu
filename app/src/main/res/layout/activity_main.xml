    <TextView
        android:id="@+id/textForPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nisl suspendisse vitae et, venenatis. Magna pharetra elementum imperdiet tellus sagittis a sit lacus. Tortor rhoncus, amet sagittis proin. Magna lacus auctor morbi ultrices enim egestas massa velit. Dapibus aliquet consectetur vel ac turpis a. Semper at pretium tortor sit. Non dolor purus vulputate quam in urna. Volutpat pretium, maecenas libero tincidunt scelerisque id. Rhoncus sollicitudin massa elementum porttitor nibh. Donec interdum commodo id in. Tincidunt sit faucibus vitae pretium viverra viverra sit. Commodo nisi, laoreet consequat aliquam vivamus congue curabitur suspendisse orci.Iaculis mauris rutrum leo nisl. Ut."
        android:textColor="#DE000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linerForVerticalMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:orientation="vertical"
        android:visibility="invisible"
        >


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_button_background"
            app:srcCompat="@drawable/ic_baseline_check_24"
            tools:ignore="VectorDrawableCompat"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_background"
            app:srcCompat="@drawable/ic_baseline_close_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_background"
            app:srcCompat="@drawable/ic_baseline_add_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_background"
            app:srcCompat="@drawable/ic_baseline_create_24"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

</FrameLayout>